{
  "models": {
    "reasoning": "opus",
    "writing": "sonnet"
  },
  "agents": {
    "a1": {
      "model": "reasoning",
      "tools": [
        "WebSearch",
        "WebFetch",
        "Read",
        "Write"
      ]
    },
    "b1": {
      "model": "reasoning",
      "tools": [
        "Read",
        "Write",
        "WebSearch"
      ],
      "phase": 1,
      "description": "相关工作分析 - 从 Phase 2 前移到 Phase 1"
    },
    "b2": {
      "model": "reasoning",
      "tools": [
        "Read",
        "Write",
        "Glob"
      ]
    },
    "b3": {
      "model": "reasoning",
      "tools": [
        "Read",
        "Write",
        "Glob"
      ]
    },
    "c1": {
      "model": "writing",
      "tools": [
        "Read",
        "Write"
      ]
    },
    "c2": {
      "model": "writing",
      "tools": [
        "Read",
        "Write"
      ]
    },
    "c3": {
      "model": "writing",
      "tools": [
        "Read",
        "Write"
      ]
    },
    "c4": {
      "model": "writing",
      "tools": [
        "Read",
        "Write",
        "Bash",
        "Glob"
      ],
      "description": "LaTeX 编译 — Markdown→LaTeX→PDF 转换 + 编译诊断修复"
    },
    "d1": {
      "model": "reasoning",
      "tools": [
        "Read",
        "Write"
      ]
    },
    "d2": {
      "model": "reasoning",
      "tools": [
        "Read",
        "Write"
      ]
    }
  },
  "quality": {
    "min_papers": 40,
    "min_review_score": 9.0,
    "max_review_iterations": 15,
    "max_response_rounds": 3,
    "dynamic_scoring": true,
    "required_sections": [
      "abstract",
      "introduction",
      "related_work",
      "methodology",
      "experiments",
      "results",
      "discussion",
      "conclusion"
    ],
    "section_min_word_count": {
      "introduction": 800,
      "related_work": 1500,
      "methodology": 1200,
      "experiments": 1000,
      "discussion": 800
    }
  },
  "paper": {
    "target_word_count": 10000,
    "default_venue": "AAAI"
  },
  "latex": {
    "enabled": true,
    "engine_priority": ["pdflatex", "xelatex", "latexmk", "tectonic"],
    "max_compile_fix_attempts": 5,
    "fallback_to_tex_only": true,
    "template_dir": "templates/",
    "default_template": "arxiv"
  },
  "search": {
    "arxiv_api_enabled": true,
    "arxiv_max_results_per_query": 10,
    "semantic_scholar_enabled": false,
    "search_strategy": "arxiv_first",
    "generate_bibtex": true
  },
  "parallel": {
    "phase1_enabled": false,
    "use_task_tool": true,
    "timeout_per_agent": 300,
    "retry_on_failure": true,
    "max_retries": 1,
    "deprecated": "并行模式已移除，Phase 1 现在只支持串行执行"
  },
  "cache": {
    "enabled": true,
    "max_papers_per_domain": 500,
    "purge_after_days": 365,
    "auto_generate_index": true,
    "domains": {
      "multi_agent_systems": "MAS",
      "knowledge_graph": "KG",
      "nlp_to_sql": "NL2SQL",
      "bridge_engineering": "Bridge"
    }
  },
  "skills": {
    "paper-generation": {
      "description": "论文生成主编排器"
    },
    "paper-phase1-research": {
      "description": "Phase 1 文献调研与相关工作分析（串行执行）"
    },
    "paper-phase2-design": {
      "description": "Phase 2 论文设计阶段（B2 → B3）"
    },
    "paper-phase3-writing": {
      "description": "Phase 3 论文撰写阶段"
    },
    "paper-phase4-quality": {
      "description": "Phase 4 质量保障阶段"
    },
    "requirements-spec": {
      "description": "需求规范协议 — 模糊指令澄清与结构化需求确认"
    },
    "research-interview": {
      "description": "研究访谈 — 6 阶段结构化访谈提炼研究规范"
    },
    "research-ideation": {
      "description": "研究构思 — 从模糊主题生成 3-5 个研究方向"
    },
    "devils-advocate": {
      "description": "魔鬼代言人 — 论文撰写前的批判性审查"
    },
    "quality-scorer": {
      "description": "量化评分引擎 — 内容质量量化评估"
    },
    "exploration-manager": {
      "description": "探索沙箱管理器 — 轻量级实验空间管理"
    }
  },
  "domain_skills": {
    "knowledge_graph": {
      "doc": "docs/domain-knowledge/kg.md",
      "full_name": "Knowledge Graphs and Ontology Engineering",
      "keywords": [
        "KG",
        "ontology",
        "RDF",
        "OWL",
        "SPARQL",
        "knowledge graph",
        "RDFS"
      ]
    },
    "multi_agent_systems": {
      "doc": "docs/domain-knowledge/mas.md",
      "full_name": "Multi-Agent Systems (MAS)",
      "keywords": [
        "multi-agent",
        "MAS",
        "BDI",
        "Contract Net",
        "Blackboard",
        "agent communication",
        "coordination",
        "negotiation"
      ]
    },
    "nl2sql": {
      "doc": "docs/domain-knowledge/nl2sql.md",
      "full_name": "Natural Language to SQL (NL2SQL / Text2SQL)",
      "keywords": [
        "NL2SQL",
        "Text2SQL",
        "schema linking",
        "SQL generation",
        "text-to-SQL",
        "natural language interface"
      ]
    },
    "bridge_engineering": {
      "doc": "docs/domain-knowledge/bridge.md",
      "full_name": "Bridge Engineering",
      "keywords": [
        "bridge",
        "structural health",
        "inspection",
        "BIM",
        "SHM",
        "non-destructive testing",
        "load rating",
        "damage detection"
      ]
    },
    "data_analysis": {
      "doc": "docs/domain-knowledge/data.md",
      "full_name": "Data Analysis and Machine Learning",
      "keywords": [
        "data mining",
        "machine learning",
        "classification",
        "regression",
        "clustering",
        "feature engineering",
        "cross-validation"
      ]
    }
  },
  "versioning": {
    "enabled": true,
    "mode": "milestones",
    "max_versions_to_keep": 10,
    "compress_old_versions": false
  },
  "confirmation": {
    "mode": "threshold",
    "threshold_score": 9.0,
    "confirm_at_milestones": true,
    "confirm_every_n_iterations": null,
    "require_approval_for_final": true
  },
  "interaction": {
    "mode": "interactive",
    "required_checkpoints": [
      "phase0_venue_selection",
      "phase0_title_confirmation",
      "phase0_abstract_framework",
      "phase2_b3_outline_confirmation"
    ],
    "optional_checkpoints": [],
    "allow_skip_optional": true,
    "feedback_persistence": true,
    "auto_apply_feedback": true
  },
  "venue_analysis": {
    "enabled": true,
    "auto_fetch_latest": false,
    "cache_duration_days": 30,
    "fallback_to_default": true,
    "predefined_venues": [
      "AAAI",
      "IJCAI",
      "ISWC",
      "WWW",
      "ACL",
      "EMNLP",
      "KR",
      "AAMAS",
      "TOIS",
      "TKDE"
    ]
  },
  "codebase_analyzer": {
    "enabled": true,
    "model": "reasoning",
    "tools": ["Read", "Glob", "Grep", "Write", "Bash"],
    "description": "独立的代码库分析工具 — 从代码库自动生成 input-context.md"
  },
  "feedback": {
    "enabled": true,
    "priority_over_reviewer": true,
    "track_status": true
  },
  "requirements_spec": {
    "enabled": true,
    "auto_trigger": true,
    "min_blocked_to_trigger": 2,
    "must_fields": ["paper_title", "innovations", "system_architecture", "key_terminology"],
    "should_fields": ["target_venue", "target_system"],
    "may_fields": ["codebase_path", "additional_context"]
  },
  "devils_advocate": {
    "enabled": true,
    "interactive": true,
    "min_challenges": 5,
    "max_challenges": 7,
    "inject_defense_notes": true
  },
  "scoring": {
    "enabled": true,
    "base_score": 100,
    "thresholds": {
      "block": 70,
      "pass": 85,
      "excellent": 95
    },
    "gate_checks": {
      "gate1": {
        "min_papers": {"weight": -30, "severity": "critical"},
        "min_gaps": {"weight": -15, "severity": "major"},
        "innovation_support": {"weight": -20, "severity": "critical"},
        "output_format": {"weight": -10, "severity": "major"}
      },
      "gate2": {
        "experiment_coverage": {"weight": -20, "severity": "critical"},
        "baseline_count": {"weight": -15, "severity": "major"},
        "metric_clarity": {"weight": -10, "severity": "major"},
        "section_coverage": {"weight": -15, "severity": "critical"},
        "logic_coherence": {"weight": -5, "severity": "minor"}
      },
      "gate3": {
        "section_word_count": {"weight": -5, "severity": "major"},
        "citation_format": {"weight": -3, "severity": "minor"},
        "figure_reference": {"weight": -5, "severity": "major"},
        "abstract_completeness": {"weight": -10, "severity": "critical"},
        "terminology_consistency": {"weight": -3, "severity": "minor"},
        "latex_compilation": {"weight": -100, "severity": "fatal"}
      },
      "gate4": {
        "review_score": {"weight": -30, "severity": "critical"},
        "critical_issues_addressed": {"weight": -15, "severity": "critical"},
        "version_history": {"weight": -5, "severity": "minor"},
        "feedback_processed": {"weight": -10, "severity": "major"}
      }
    }
  },
  "exploration": {
    "enabled": true,
    "quality_threshold": 60,
    "max_active_experiments": 5,
    "auto_archive_after_days": 30,
    "promote_requires_confirmation": true
  }
}
